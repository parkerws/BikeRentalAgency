@model BikeRentalMVC.ViewModels.ReservationCreateViewModel

@{
    ViewData["Title"] = "Reserve";
}

<h1>BikeDetails</h1>

<div>
    <h4>Bikes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bike.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bike.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bike.Frame)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bike.Frame)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bike.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bike.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bike.type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bike.type)
        </dd>
    </dl>
    <div>
        <div class="form-group">
            <input type="datetime-local" name="Begin Date" />
            <input type="datetime-local" name="Turn-in Date"/>
            <input type="text" name="Name" placeholder="Name"/>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Submit", "Reserve") 
    <a class="btn-lg" asp-action="Reserve">Reserve</a>
</div>